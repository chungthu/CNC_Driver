<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Tiền đầu ca: "
        android:textAlignment="center"
        android:textSize="20sp"
   />
    <TextView
        android:id="@+id/txtend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/txtfirt"
        android:layout_toRightOf="@id/text_share"
        android:layout_marginEnd="8dp"
        android:text="00000"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/text_share"
        android:text="Tiền cuối ca: "
        android:textAlignment="center"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/txtfirt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/text_share"
        android:layout_marginEnd="8dp"
        android:text="0000"
        android:textAlignment="center"
        android:textSize="20sp"
        />
    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Kết thúc thu tiền"
        android:id="@+id/btnend"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:textAllCaps="false"
    android:layout_below="@id/txt1"
    android:background="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thống kê ngày này"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/btndate"
      android:layout_above="@id/btnmonth"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"

        android:background="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thống kê tháng này"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnmonth"

        android:background="#ffffff"/>
</RelativeLayout>